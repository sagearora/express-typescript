{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "es7",
      "dom"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "exclude": [
    "/node_modules/"
  ],
  "include": [
    "./**/*.ts",
    "typings",
    "server.ts"
  ]
}